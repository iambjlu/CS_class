        <StackPanel Margin="0,135,794,0" Height="134" VerticalAlignment="Top" HorizontalAlignment="Right" Width="371" Grid.Column="1">
            <RadioButton x:Name="rb1" Content="內用" Checked="RadioButton_Checked" Height="32" Width="161"/>
            <RadioButton x:Name="rb2" Content="外帶" Checked="RadioButton_Checked" Height="32" Width="161" IsChecked="True"/>
        </StackPanel>

    </Grid>
</Page>
